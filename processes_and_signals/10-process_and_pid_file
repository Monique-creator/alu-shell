#!/bin/bash

PID_FILE="/var/run/myscript.pid"

# Create the PID file
echo $$ > "$PID_FILE"

# Function to handle SIGTERM
handle_sigterm() {
    echo "I hate the kill command"
}

# Function to handle SIGINT
handle_sigint() {
    echo "Y U no love me?!"
}

# Function to handle SIGQUIT or SIGTERM for clean exit
cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

# Trap signals
trap 'handle_sigterm' SIGTERM
trap 'handle_sigint' SIGINT
trap 'cleanup' SIGQUIT SIGTERM

# Infinite loop printing "To infinity and beyond"
while true; do
    echo "To infinity and beyond"
    sleep 1
done

